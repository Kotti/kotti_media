<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content" class="document-view content">
    <h1>${context.title}</h1>
    <div class="row">
      <div class="span6">
        <p class="description">
          ${context.description}
        </p>
        <p tal:replace="structure context.body"></p>
      </div>
      <div class="span6">
        <audio tal:replace="api.render_template('kotti_media:templates/audio-element.pt',
                                                 poster_url=poster_url,
                                                 m4a_url=m4a_url,
                                                 mp3_url=mp3_url,
                                                 oga_url=oga_url,
                                                 wav_url=wav_url)" />
      </div>
    </div>
    <script tal:replace="api.render_template('kotti_media:templates/audio-script.pt')" />
    <script tal:replace="api.render_template('kotti_media:templates/video-script.pt')" />
  </article>
</html>
