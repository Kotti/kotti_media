<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content" class="document-view content">
    <h1>${context.title}</h1>
    <div class="row">
      <div class="span6">
        <p class="description">
          ${context.description}
        </p>
        <p tal:replace="structure context.body"></p>
      </div>
      <div class="span6">
        <video tal:replace="api.render_template('kotti_media:templates/video-element.pt',
                                                 poster_url=poster_url,
                                                 mp4_url=mp4_url,
                                                 webm_url=webm_url,
                                                 ogv_url=ogv_url,
                                                 subtitles_url=subtitles_url,
                                                 chapters_url=chapters_url)" />
      </div>
    </div>
    <script tal:replace="api.render_template('kotti_media:templates/video-script.pt')" />
  </article>
</html>
